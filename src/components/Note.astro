---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="note">
  <p class="title">{title}</p>
  <slot />
</div>

<style>
  .note {
    padding: 0.25rem 1.5rem 1rem;
    border-left: 4px solid #4ade80;
    background-color: #f0fdf4;
    border-radius: 0.25rem;
    margin: 1.5rem 0;
  }
  .title {
    font-weight: bold;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }
</style>
