---
import HeaderLink from "./HeaderLink.astro";
import Logo from "../assets/logo.svg";
import ThemeToggler from "./ThemeToggler.astro";
---

<header>
  <div class="container mx-auto">
    <nav class="flex items-center justify-between py-3">
      <a href="/" class="flex items-center gap-3">
        <Logo
          class="size-14 transition-transform duration-200 hover:-rotate-12 hover:scale-125"
        />
        <div class="text-2xl font-bold">Dingo's Den</div>
      </a>
      <div class="flex items-center gap-4">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/archive">Archive</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
        <HeaderLink href="/rss.xml">RSS</HeaderLink>
        <ThemeToggler />
      </div>
    </nav>
  </div>
</header>
