---
interface Props {
  text: string;
  inline?: boolean;
}
const { text, inline = true } = Astro.props;
---

<div class="tooltip-container" data-title={text} class:list={[{ 'is-inline': inline }]}>
  <slot />
</div>

<style>
  .tooltip-container {
    position: relative;
  }
  .is-inline {
    display: inline-block;
  }

  .tooltip-container[data-title]::after {
    content: attr(data-title);
    position: absolute;
    left: 50%;
    bottom: 100%;
    transform: translateX(-50%);
    margin-bottom: 8px;
    background-color: #333;
    color: #fff;
    font-size: 0.875rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    white-space: normal;
    width: max-content;
    max-width: 300px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.15s ease-in-out, transform 0.15s ease-in-out;
    z-index: 10;
    pointer-events: none;
  }

  .tooltip-container[data-title]:hover::after {
    opacity: 1;
    visibility: visible;
    transition-delay: 0.1s;
  }
</style>
