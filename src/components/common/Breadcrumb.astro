---
interface Props {
  id: string;
  title: string;
}

const { id, title } = Astro.props;

const segments = id.split("/").filter(Boolean);
const breadcrumbs = [];

breadcrumbs.push({ label: "Blog", href: "/blog" });

let currentPath = "/blog";
for (const segment of segments.slice(0, -1)) {
  currentPath += `/${segment}`;
  breadcrumbs.push({ label: segment, href: currentPath });
}

breadcrumbs.push({ label: title, href: null }); // Current page, no link
---

<nav aria-label="Breadcrumb">
  <ol class="text-muted mb-4 flex items-center gap-2 pl-0 text-sm">
    {
      breadcrumbs.map((crumb, index) => (
        <li class="flex items-center gap-2 pl-0">
          {crumb.href ? (
            <a href={crumb.href} class="no-underline">
              {crumb.label}
            </a>
          ) : (
            <span class="text-secondary font-medium">{crumb.label}</span>
          )}
          {index < breadcrumbs.length - 1 && <span class="opacity-50">/</span>}
        </li>
      ))
    }
  </ol>
</nav>
