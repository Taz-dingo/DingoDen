---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  class="my-6 rounded border-l-4 px-6 pb-4 pt-1"
  style=`background-color: var(--note-bg-color); border-color: var(--note-border-color);`
>
  <p class="mb-2 font-bold text-lg" style=`color: var(--note-title-color);`>
    {title}
  </p>
  <slot />
</div>
